<h2>Create a new task</h2>

<form action="/tasks" method="post">
  <label for="task_description">Description</label>
  <input id="task_description" name="description" type="text">

  <button>Create Task</button>
</form>

<h3>Incomplete Tasks</h3>

<ul>
  <% @list_not_done.each do |task| %>
    <li><%=task.description %></li>
    <form action="tasks/<%= task.id %>" method="post">
      <input name="_method" type="hidden" value="patch">
      <input name="description" type="hidden" value="<%= task.description %>">
      <input name="done" type="hidden" value="true">
      <button>Mark done</button>
    </form>
    <p><a href="tasks/<%=task.id%>/edit">Edit</a>
       <a href="/tasks/<%= task.id %>"
          data-confirm="You sure?"
          data-method="delete"
          rel="nofollow">Delete</a></p>
  <% end %>
</ul>

<h3>Completed Tasks</h3>

<ul>
  <% @list_done.each do |task| %>
    <li><%=task.description %></li>
    <p><a href="/tasks/<%= task.id %>"
          data-confirm="You sure?"
          data-method="delete"
          rel="nofollow">Delete</a></p>
  <% end %>
</ul>


